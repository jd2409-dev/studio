rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection:
    // - Authenticated users can read and write their *own* profile document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User Progress collection:
    // - Authenticated users can read and write their *own* progress document.
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- Potentially add rules for other collections as needed ---
    // Example: Allow read access to a 'publicContent' collection
    // match /publicContent/{docId} {
    //   allow read: if true;
    // }

    // Default rule: Deny all reads and writes to any other path
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
